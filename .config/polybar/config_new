[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

;***************************************
[module/spotify]
type = custom/script
interval = 1
format = <label>
exec = python ~/.config/polybar/spotify -f '  {play_pause} {artist}: {song}' -p ',' -t 30
format-underline = #1db954


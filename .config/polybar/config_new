;***************************************
[global/wm]
margin-top = 5
margin-bottom = 5

;***************************************
[bar/topbar]
monitor = ${env:MONITOR:}
width = 100%
height = 35
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 10
overline-size = 10

border-size = 0
border-color = #00000000

padding = 1

module-margin = 1

font-0 = SauceCodePro Nerd Font:pixelsize=15;1
;font-1 = Ubuntu Nerd Font:size=15;2
;font-2 = Material\-Design\-Iconic\-Font:size=18;2
;font-3 = FontAwesome:size=14;2

modules-left = wlan backlight  battery
modules-center = i3
modules-right = cpu pulseaudio temperature memory filesystem date

tray-position = left
tray-padding = 2
tray-background = ${self.background}
tray-detached = false

wm-restack = i3

override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

